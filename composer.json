{
    "name": "pagbank/pagbank-for-woocommerce",
    "autoload": {
        "psr-4": {
            "PagBank_WooCommerce\\": "src/core/"
        },
        "files": [
            "src/core/Presentation/Helpers.php",
            "src/core/Presentation/ApiHelpers.php"
        ]
    },
    "authors": [
        {
            "name": "Elias JÃºnior",
            "email": "me@eliasjr.dev"
        }
    ],
    "scripts": {
        "ci": [
            "./vendor/bin/phpcs",
            "./vendor/bin/phpcbf"
        ],
        "unit": "./vendor/bin/phpunit --coverage-html build/coverage-report"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.8",
        "phpunit/phpunit": "^9.6",
        "wp-coding-standards/wpcs": "^2.3",
        "woocommerce/woocommerce-sniffs": "^0.1.3"
    },
    "require": {
        "php": ">=7.2 <8",
        "jakeasmith/http_build_url": "^1",
        "giggsey/libphonenumber-for-php": "^8.13",
        "nesbot/carbon": "^2.66",
        "wilkques/pkce-php": "^2.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
